<table class="table table-bordered table-hover" style="border: 1px solid #444; border-collapse: collapse; margin-bottom:4rem; width: 110%;">
    <thead class="bg-primary text-white fw-bold">
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdPedido)</th>
            <th>@Html.DisplayNameFor(model => model.IdCliente)</th>
            <th>@Html.DisplayNameFor(model => model.IdProducto)</th>
            <th>@Html.DisplayNameFor(model => model.FechaPedido)</th>
            <th>@Html.DisplayNameFor(model => model.MetodoPago)</th>
            <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th>@Html.DisplayNameFor(model => model.TotalDescuento)</th>
            <th>@Html.DisplayNameFor(model => model.ConfirmarPedido)</th>
            <th></th>
        </tr>
    </thead>
    <tbody style="background:#FFFFFF;">
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdPedido)</td>
                <td><a asp-action="ListaPedidoCliente" asp-route-codcli="@item.IdCliente">@Html.DisplayFor(modelItem => item.IdCliente)</a></td>
                <td>@Html.DisplayFor(modelItem => item.IdProducto)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaPedido)</td>
                <td>@Html.DisplayFor(modelItem => item.MetodoPago)</td>
                <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                <td>S/. @Html.DisplayFor(modelItem => item.Precio)</td>
                <td>S/. @Html.DisplayFor(modelItem => item.TotalDescuento)</td>
                <td>
                    @{
                        var estadoClase = item.ConfirmarPedido == "Confirmado" ? "estado-confirmado" :
                        item.ConfirmarPedido == "Rechazado" ? "estado-rechazado" :
                        item.ConfirmarPedido == "Pendiente Confirmar" ? "estado-pendiente" :
                        item.ConfirmarPedido == "Compra Realizada" ? "compra-realizada" :
                        item.ConfirmarPedido == "Compra Rechazada" ? "compra-rechazada" : "";
                    }
                    <span class="@estadoClase">@Html.DisplayFor(modelItem => item.ConfirmarPedido)</span>
                </td>
                <td>
                    @if (item.ConfirmarPedido == "Pendiente Confirmar")
                    {
                        <button class="btn btn-outline-secondary" onclick="showConfirmationModal('@item.IdPedido')">Confirmación</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<input id="idPedidoDet" hidden value=""/>
<input id="estadoPedidoDet" hidden value="" />

<!-- Modal de confirmación -->
<div class="modal" tabindex="-1" role="dialog" id="confirmationModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Pedido</h5>
            </div>
            <div class="modal-body">
                <p>Elija una opción para confirmar el pedido:</p>
                <select id="orderStatus" class="form-control">
                    @* <option value="">Seleccionar: </option> *@
                    <option value="Confirmado">Confirmar</option>
                    <option value="Rechazado">Rechazar</option>
@*                     <option value="Cancelado">Cancelar</option>
 *@                </select>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="updateOrderStatus()">Aceptar</button>
                <button class="btn btn-secondary" data-dismiss="modal" onclick="cerrarStatus()">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    // let currentOrderId;

    // function showConfirmationModal(orderId) {
    //     document.getElementById('#idPedidoDet').value = "";
    //     document.getElementById('#idPedidoDet').value = orderId;
    //     currentOrderId = orderId;
    //     $('#confirmationModal').modal('show');
    // }

    // function updateOrderStatus() {
    //     const status = $('#orderStatus').val();

    // }

    function cerrarStatus(){
        $('#confirmationModal').modal('hide');
    }

    let currentOrderId;

    function showConfirmationModal(orderId) {
        currentOrderId = orderId;
        $('#idPedidoDet').val(orderId);
        $('#confirmationModal').modal('show');
    }

    async function updateOrderStatus() {
        const status = $('#orderStatus').val();
        const orderId = $('#idPedidoDet').val();

        const data = {
            idPedido: orderId,
            confirmarPedido: status
        };

        try {
            const response = await fetch('/OrdenPedidoes/ActualizarPedido', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                $('#confirmationModal').modal('hide');
                location.reload(); // Recargar la página para reflejar los cambios
            } else {
                console.error('Error al actualizar el estado del pedido');
            }
        } catch (error) {
            console.error('Error en la solicitud:', error);
        }
    }
</script>


